<div class="container">
    <div class="jumbotron" align = "center">
        <h1 class="display-4">Reddit Scraper</h1>
        
        
            <form class="create-form">

                <div class="form-group">
                    <label for="ca" ><h3>Enter a Subreddit:</h3></label>
                    <input type="text" class="form-control" id="subreddit">
                </div>

                

                <button id="scrape" type="submit"class="btn btn-warning">Scrape Reddit</button>
            </form>
    
    </div>
    
    <div class = "row">
        <div class = "col-12">
            <div class="card">
                <div class="card-body articles" align = "center">
        
                <h1>Scraped Articles!</h1>
               
                    {{#each articles}}
                        
                        
                    <h4>{{title}}</h4>
	                 
                    
                    <p>Link: <a href={{link}}>{{link}}</a></p>
                    <p>Subreddit: {{subreddit}}</p>
                    <h4>Comments: </h4>
                        {{#each comment}}
                        <p>{{this.username}} --- {{this.comment}}
                        <button class="btn btn-danger btn-sm" id="delete" type="button" data-id="{{this._id}}">Delete</button>
                        </p>
                        {{/each}}
                        
                        
                    
  
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" id="add-comment" type="submit" data-id="{{_id}}">Username and Comment</button>
                            
                        </div>
                        <input type="text" id="username_{{_id}}" placeholder="Username"class="form-control" data-id="{{_id}}">
                        <input type="text" id="comment_{{_id}}" placeholder="Comment"class="form-control" data-id="{{_id}}">
                        
                    </div>
                
                      <hr>  
                        
                        {{!-- {{/unless}} --}}
                    {{/each}}
                {{!-- </ul> --}}
                </div>
            </div>
        </div>
    

</div>  







</div>
